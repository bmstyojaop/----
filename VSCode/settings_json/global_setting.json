{
  /**【エディタ画面】*/
  // 括弧に色をつける
  "editor.bracketPairColorization.enabled": true,
  // デフォルトのフォーマッタ：prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 保存時にフォーマットを適用
  "editor.formatOnSave": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,
  // 保存時にESLintのエラーを修正
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // 全角空白を表示
  "editor.renderWhitespace": "all",
  // タブのサイズをスペース2個分に割当
  "editor.tabSize": 2,
  // ctrl + wheelで拡大縮小
  "editor.mouseWheelZoom": true,
  // カーソルぬるぬる
  "editor.cursorSmoothCaretAnimation": "on",
  // プレークポイントの領域を削る
  "editor.glyphMargin": false,
  // Markdownの折り返し
  "[markdown]": {
    // "editor.wordWrap": "off",
  },

  /** 【エクスプローラ】*/
  // 削除時に確認無しでゴミ箱行き
  "explorer.confirmDelete": false,
  // ファイルの並べかえを拡張子毎に行う
  "explorer.sortOrder": "type",

  /**【ファイル操作】*/
  // フォーカスを失うと保存
  "files.autoSave": "onFocusChange",

  /** 【ワークベンチ】*/
  // アイコンのテーマ
  "workbench.iconTheme": "material-icon-theme",
  // ワークベンチのアイコンをトップにする
  "workbench.activityBar.location": "top",
  // ワークベンチの補助線を変更
  "workbench.tree.renderIndentGuides": "always",
  // ツリーのインデント
  "workbench.tree.indent": 16,
  // エディターたぶの高さをコンパクトにする
  "window.density.editorTabHeight": "compact",
  // 最大表示タブ数を制限する
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  // エディタタブのサイズを固定
  "workbench.editor.tabSizing": "fixed",
  // エディタタブの最大幅を設定
  "workbench.editor.tabSizingFixedMaxWidth": 200,

  /** 【vim】*/
  // VSCodeVim 拡張で設定された Vim のキーではなく、VSCode で設定されているキーを実行するようにする
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  //検索でマッチした箇所をハイライトする
  "vim.hlsearch": true,
  // インサートモード時のキーバインド設定
  "vim.insertModeKeyBindings": [
    //   エスケープキーをjjに割当
    { "after": ["<Esc>"], "before": ["j", "j"] }
  ],
  // クリップボードに貼り付け
  "vim.useSystemClipboard": false,

  /** git */
  // リモートリポジトリを自動でfetchする
  "git.autofetch": true,

  /**[TypeScript】*/
  // 関数や変数の被 import 数を表示
  "typescript.referencesCodeLens.enabled": true,

  /**【TailwindCSS】*/
  // 拡張機能Tailwind Foldで勝手にclassNameを閉じるのを無効
  "tailwind-fold.autoFold": false,
  // unknownAtRulesで警告が出るのを防ぐ
  "files.associations": {
    "*.css": "tailwindcss"
  },
  /** 【スペルチェッカー】 */
  // 単語追加
  "cSpell.userWords": ["clsx"]
}
